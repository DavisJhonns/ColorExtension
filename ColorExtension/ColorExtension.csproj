<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>

		<PackageId>ColorExtension</PackageId>
		<Version>1.0.0</Version>
		<Authors>DavisJhonns</Authors>
		<Company>DavisJhonns</Company>

		<Description>
			Platform-independent hexadecimal color parsing and conversion library
			for .NET and MAUI.
		</Description>

		<PackageTags>color hex rgba maui dotnet</PackageTags>
		<RepositoryUrl>https://github.com/DavisJhonns/ColorExtension</RepositoryUrl>
		<RepositoryType>git</RepositoryType>

		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/DavisJhonns/ColorExtension</PackageProjectUrl>
	</PropertyGroup>


</Project>
